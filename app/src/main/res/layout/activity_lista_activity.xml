<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_backgroud"
    tools:context=".activities.ListaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardCornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:scaleType="fitXY"
            android:background="#AD05D2ED"
            android:id="@+id/foto_pokemon"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/txt_nome_pokemon"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foto_pokemon"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="NomePokemon"
            android:textSize="24sp"
            android:textStyle="bold"/>


    </LinearLayout>


</RelativeLayout>